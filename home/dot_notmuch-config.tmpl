# .notmuch-config - Configuration file for the notmuch mail system
#
# For more information about notmuch, see https://notmuchmail.org

[database]
{{ if eq .chezmoi.hostname "torpedo" -}}
# TODO: clean-up once decided to use lieer or not
# XXX: provide full path or expect errors with afew FolderNameFilter
# Path for notmuch + afew without lieer
# path=/home/baptiste/Mail
# Path for notmuch with lieer
path=/home/baptiste/.mail
{{ else if eq .chezmoi.hostname "sikaru" -}}
# XXX: provide full path or expect errors with afew FolderNameFilter
path=/home/baptiste/Mail
{{ end }}
[user]
name=Baptiste Grenier
{{ if eq .chezmoi.hostname "torpedo" -}}
primary_email=baptiste.grenier@operas-eu.org
other_email=baptiste@bapt.name
{{ else if eq .chezmoi.hostname "sikaru" -}}
primary_email=baptiste@bapt.name
other_email=baptiste.grenier@operas-eu.org
{{ end }}
[new]
{{ if eq .chezmoi.hostname "torpedo" -}}
# XXX: When using notmuch + afew without lieer: add a new tag
# Initially tag all new messages as new, post-new hook will do the real tagging
# tags=new
# ignore=.uidvalidity;.mbsyncstate
# XXX: when using notmuch + lieer, do not add any new tag, only use Gmail ones
tags=
ignore=/.*[.](json|lock|bak)$/
{{ else if eq .chezmoi.hostname "sikaru" -}}
tags=new
ignore=.uidvalidity;.mbsyncstate
{{ end }}
[search]
exclude_tags=

[maildir]
synchronize_flags=true
