# Set default values
defaults
logfile ~/.msmtp.log
protocol smtp
auth on
tls on
tls_starttls on

account perso
host mail.bapt.name
port 587
from baptiste@bapt.name
user baptiste@bapt.name
# secret-tool store --label=msmtp host smtp.your.domain service smtp user yourusername
passwordeval secret-tool lookup host mail.bapt.name service smtps user baptiste@bapt.name
tls_trust_file system

account default: perso
