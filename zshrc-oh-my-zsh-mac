# tmux conf
export ZSH_TMUX_AUTOSTART=true
# export ZSH_TMUX_ITERM2=true

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
# Add wisely, as too many plugins slow down shell startup.
plugins=(
#  autoenv
  brew
  colored-man
  colorize
  docker
  git
  github
  history-substring-search
  osx
  pip
  python
  rvm
  tmux
  vagrant
  vi-mode
)
# Breaks login
#   asdf
# Slowing login
#  pyenv # not used as using manual configuration?
#  autoenv
#  virtualenv
# virtualenvwrapper

source $ZSH/oh-my-zsh.sh

# User configuration
# Disable duplicates in substring search
# https://github.com/zsh-users/zsh-history-substring-search/issues/19
setopt HIST_IGNORE_ALL_DUPS
setopt HIST_FIND_NO_DUPS

# export MANPATH="/usr/local/man:$MANPATH"
# https://alysivji.github.io/setting-up-pyenv-virtualenvwrapper.html
export PROJECT_HOME="$HOME/code"
#export PYENV_VIRTUALENVWRAPPER_PREFER_PYVENV="true"
#pyenv virtualenvwrapper_lazy

# https://github.com/pyenv/pyenv-installer
export PATH="~/.pyenv/bin:$PATH"
eval "$(pyenv init -)"
eval "$(pyenv virtualenv-init -)"

# You may need to manually set your language environment
# export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

typeset -U path
path+=/usr/local/sbin

# Preferred editor for local and remote sessions
if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR='vim'
else
  export EDITOR='nvim'
  alias vim='nvim'
  alias vi='nvim'
fi

